<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--wMPhMP : Width MatchParent Height MatchParent
    wWChMP : Width WrapContent Height MatchParent
    wMPhWC : Width MatchParent Height WrapContent
    wWChWC : Width WrapContent Height WrapContent-->
    <style name="Layout_wMPhMP" parent="MyAppTheme">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

    </style>
    <style name="Layout_wWChMP" parent="MyAppTheme">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>


    </style>
    <style name="Layout_wMPhWC" parent="MyAppTheme">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="Layout_wWChWC" parent="MyAppTheme">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
    <style name="TextView_wWChWC_H1" parent="Layout_wWChWC">
        <!-- Customize your theme here. -->
        <item name="android:textSize">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:layout_margin">@dimen/text_margin</item>

    </style>
    <style name="TextView_wWChWC_H2" parent="Layout_wWChWC">
        <!-- Customize your theme here. -->
        <item name="android:textSize">15dp</item>

        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:layout_margin">@dimen/text_margin</item>

    </style>
    <style name="TextView_wWChMP_H2" parent="Layout_wWChMP">
        <!-- Customize your theme here. -->
        <item name="android:textSize">15dp</item>

        <item name="android:padding">@dimen/text_padding</item>
        <item name="android:layout_margin">@dimen/text_margin</item>

    </style>

    <style name="MyCard" parent="CardView.Dark">
        <item name="android:padding">@dimen/card_padding</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/normal_elevation</item>
    </style>
    <style name="Card_Fees" parent="MyCard">
        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/color_fees</item>

    </style>
    <style name="Card_Test" parent="MyCard">
        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">@color/color_fees</item>

    </style>



</resources>
