<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="@dimen/normal_padding"
    android:background="@color/color_fees_row_background"
    style="@style/Layout_wMPhWC">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center_vertical">
        <TextView
            style="@style/TextView_wWChWC_H2"
            android:id="@+id/txt_installment_name"
            android:text="@string/na"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="40dp"
            android:layout_below="@id/txt_installment_name"
            android:id="@+id/txt_installment_date"
            android:text="@string/na"/>
        <TextView
            android:id="@+id/txt_installment_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="40dp"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_below="@id/txt_installment_name"
            android:layout_toRightOf="@id/txt_installment_date"
            android:layout_toEndOf="@id/txt_installment_date"
            android:text="@string/na"/>
    </RelativeLayout>
    <TextView
        style="@style/TextView_wWChWC_H1"
        android:text="@string/na"
        android:gravity="center"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:id="@+id/txt_installment_status"/>

</LinearLayout>