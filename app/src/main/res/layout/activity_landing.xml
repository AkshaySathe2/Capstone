<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_landing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.udacity.akki.capstone.activity.LandingActivity">

    <include layout="@layout/toolbar" />
    <RelativeLayout style="@style/Layout_wMPhMP">

        <LinearLayout
            style="@style/Layout_wMPhWC"
            android:baselineAligned="false"
            android:weightSum="2"
            android:id="@+id/ll_fees_test"
            android:minHeight="100dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rel_fees">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Hi" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/rel_test"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hi"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rel_notifications"
            style="@style/Layout_wMPhWC"
            android:layout_below="@id/ll_fees_test"
            android:layout_margin="2dp"
            android:background="#FFA500"
            android:gravity="center_vertical|center_horizontal">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_notifications"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn_view_all_notifications"
                style="@style/Layout_wWChWC"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="#E59400"
                android:padding="2dp"
                android:text="View All" />
        </RelativeLayout>


    </RelativeLayout>

    <include layout="@layout/toolbar" />

</LinearLayout>
